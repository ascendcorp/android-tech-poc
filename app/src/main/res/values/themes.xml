<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidTechPoc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!-- Custom theme -->
        <item name="fontColor">@color/black</item>
        <item name="fontColorReverse">@color/white</item>
        <item name="colorControlNormal">?attr/fontColorReverse</item>
        <item name="homeBackgroundColor">?attr/colorSecondaryVariant</item>
        <item name="homeBackgroundColor2nd">?attr/fontColor</item>
        <item name="homeTabElementColor">?attr/fontColorReverse</item>
    </style>
</resources>
